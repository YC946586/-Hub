<Window x:Class="HY_Main.View.Sign.Update"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HY_Main.View.Sign" Background="Transparent"
         WindowStyle="None" Width="320" Height="400"  ResizeMode="NoResize"   UseLayoutRounding="True" AllowsTransparency="True"
        Title="程序更新">
    <Window.Resources>

    </Window.Resources>
    <Grid  >
        <Grid.Background>
            <ImageBrush  ImageSource="{DynamicResource UpdateBack}" Stretch="Fill"/>
        </Grid.Background>
        <Grid Margin="40 30 30 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="90"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Button  HorizontalAlignment="Right"  VerticalAlignment="Center" Tag="&#xe626;" Style="{DynamicResource ButtonTagImgStyle}" 
                     Foreground="White"  Click="Button_Click" />
            <TextBlock Grid.Row="1" Foreground="#FFF002" FontSize="26" HorizontalAlignment="Center" Text="发现新版本"/>
        </Grid>
     
    </Grid>
</Window>
