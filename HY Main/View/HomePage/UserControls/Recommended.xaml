<UserControl x:Class="HY_Main.View.HomePage.UserControls.Recommended"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HY_Main.View.HomePage.UserControls" xmlns:customcontrol="clr-namespace:HY.CustomControl;assembly=HY.CustomControl" xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20 0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <Image Source="{DynamicResource 热门推荐}" Width="28" Height="32" Margin="0 0 10 0" VerticalAlignment="Center"   />
                <TextBlock Text="热门推荐" FontSize="20" FontWeight="Black" Foreground="#333333" />
            </StackPanel>

            <customcontrol:SwiperContent>
                <customcontrol:SwiperContent.ItemsPanel>

                </customcontrol:SwiperContent.ItemsPanel>

            </customcontrol:SwiperContent>
        </Grid>
    </Grid>
</UserControl>
